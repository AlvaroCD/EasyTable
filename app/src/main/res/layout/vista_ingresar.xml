<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Ingresar">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_strings"
        android:textSize="50sp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/correoUsuarioLoginTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/correo_strings"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_above="@id/contraseñaLoginTxt"
        android:layout_marginBottom="25dp"
        />

    <EditText
        android:id="@+id/contraseñaLoginTxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ingresarLoginButton"
        android:layout_marginBottom="60dp"
        />

    <Button
        android:id="@+id/ingresarLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/registrarseLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:text="@string/register_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ingresarLoginButton"
        />



</RelativeLayout>