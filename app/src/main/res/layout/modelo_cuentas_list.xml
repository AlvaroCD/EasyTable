<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <View
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />

    <View
        android:id="@+id/barraMedia"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@id/numeroMesaCuentas"
        />

    <TextView
        android:id="@+id/numeroMesaCuentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:textSize="16sp"
        android:text="@string/numero_mesa_strings"
        android:layout_below="@id/barraSuperior"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
    </TextView>

    <TextView
        android:id="@+id/statusPagoCuentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/estado_del_pago_strings"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_alignTop="@id/numeroMesaCuentas"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/barraSuperior"
        android:layout_marginEnd="40dp">
    </TextView>

    <TextView
        android:id="@+id/detalles"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/click_detalles_strings"
        android:layout_below="@id/numeroMesaCuentas"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <View
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@id/detalles"
        />

</RelativeLayout>