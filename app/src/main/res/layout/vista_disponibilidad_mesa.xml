<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <View
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />

    <View
        android:id="@+id/barraMedia"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@id/numeroMesaLocal"
        />

    <TextView
        android:id="@+id/numeroMesaLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0000FF"
        android:textSize="16sp"
        android:text="@string/numero_mesa_strings"
        android:layout_below="@id/barraSuperior"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
    </TextView>

    <TextView
        android:id="@+id/disponibilidadMesaLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disponibilidad_strings"
        android:textSize="15sp"
        android:layout_alignTop="@id/numeroMesaLocal"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/barraSuperior"
        android:layout_marginEnd="40dp">
    </TextView>

    <Button
        android:id="@+id/mesaOcupadaButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/ocupada_strings"
        android:layout_below="@id/numeroMesaLocal"
        android:layout_alignStart="@id/numeroMesaLocal"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/mesaDisponibleButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/libre_strings"
        android:layout_below="@id/disponibilidadMesaLocal"
        android:layout_marginTop="25dp"
        android:layout_marginStart="250dp"
        />

    <View
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@id/mesaOcupadaButton"
        android:layout_marginTop="25dp"
        />

</RelativeLayout>