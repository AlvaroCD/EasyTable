<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MetodoDePago">

    <View
        android:id="@+id/barraInferior"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/metodo_pago_strings"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <Spinner
        android:id="@+id/metodoPagoSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/metodos_pago_strings"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/pagarMetodoPagoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pagar"
        android:layout_marginTop="20dp"
        />


    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />


</LinearLayout>