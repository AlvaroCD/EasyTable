<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditarPlatillo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nuevos_datos_platillo_strings"
        android:textSize="35sp"
        android:layout_marginTop="15dp">
    </TextView>


    <EditText
        android:id="@+id/nombreEditarPlatilloTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_platillo_strings"
        android:inputType="text"
        android:layout_marginTop="25dp">
    </EditText>


    <EditText
        android:id="@+id/precioEditarPlatilloTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/costo_strings"
        android:layout_marginTop="15dp"
        android:inputType="numberDecimal">
    </EditText>


    <EditText
        android:id="@+id/descripcionEditarPlatilloTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/descripcion_strings"
        android:inputType="text"
        android:layout_marginTop="15dp">
    </EditText>

    <TextView
        android:id="@+id/disponibilidadActualPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disponibilidad_strings"
        android:layout_marginTop="25dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        />

    <Spinner
        android:id="@+id/estadoActualizadoEditarPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:entries="@array/disponibilidad">
    </Spinner>

    <Button
        android:id="@+id/modificarEditarPlatilloButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar_empleado_button_strings"
        android:layout_marginTop="15dp"
        android:layout_gravity="center" >
    </Button>

</LinearLayout>