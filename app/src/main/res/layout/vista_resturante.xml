<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imagenLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="80dp"/>

    <TextView
        android:id="@+id/restaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagenLocal"
        android:layout_alignTop="@+id/reservar"
        android:layout_toStartOf="@+id/reservar"
        android:layout_marginEnd="30dp"
        android:text="Descripcion del local"/>

    <Button
        android:id="@+id/reservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagenLocal"
        android:layout_marginTop="60dp"
        android:layout_alignEnd="@+id/imagenLocal"
        android:text="@string/reservar_strings"/>

    <ImageView
        android:id="@+id/calificacionLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservar"
        android:layout_alignStart="@id/reservar"
        app:srcCompat="@drawable/__00estrellas"
        android:layout_marginStart="-12dp" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListadoComentarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calificacionLocal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp">
    </androidx.recyclerview.widget.RecyclerView>


    <ImageView
        android:id="@+id/cliente1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurante"
        android:layout_alignLeft="@+id/imagenLocal"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/cliente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/cliente1"
        android:layout_alignStart="@+id/imagenLocal"/>

    <ImageView
        android:id="@+id/cliente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_background"
        android:layout_below="@+id/cliente2"
        android:layout_marginTop="60dp"
        android:layout_alignStart="@+id/imagenLocal" />

    <TextView
        android:id="@+id/restaurante1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cliente1"
        android:layout_toEndOf="@+id/cliente1"
        android:padding="5dp"
        android:layout_alignEnd="@id/reservar"
        android:text="@string/comenterio_aleatorio"/>

    <TextView
        android:id="@+id/restaurante2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cliente2"
        android:layout_toEndOf="@+id/cliente2"
        android:padding="5dp"
        android:layout_alignEnd="@id/reservar"
        android:text="@string/comenterio_aleatorio"/>

    <TextView
        android:id="@+id/restaurante3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cliente3"
        android:layout_toEndOf="@+id/cliente3"
        android:padding="5dp"
        android:layout_alignEnd="@id/reservar"
        android:text="@string/comenterio_aleatorio"/>

</RelativeLayout>