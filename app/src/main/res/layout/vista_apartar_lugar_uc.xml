<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ApartarLugarUC">

    <View
        android:id="@+id/barraInferior"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reservacion_strings"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/horaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hora_strings"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cant_personas_strings"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/cantidadPersonasApartarLugarUC"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/regresarInicioButton2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/flecha_izquierda"/>

        <ImageView
            android:id="@+id/hacerReservacionButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/checked"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>


    <View
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />


</LinearLayout>