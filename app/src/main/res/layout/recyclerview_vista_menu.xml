<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/nombrePlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Nombre Platillo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
    </TextView>

    <TextView
        android:id="@+id/descripcionPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrePlatillo"
        android:text="Descripcion"
        android:textSize="15sp"
        android:layout_alignStart="@id/nombrePlatillo"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/costoPlatillo"
        android:layout_marginRight="30dp">
    </TextView>

    <TextView
        android:id="@+id/costoPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo"
        android:textSize="15sp"
        android:layout_alignTop="@id/descripcionPlatillo"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp">
    </TextView>

    <ImageView
        android:id="@+id/puntuacionPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/__50estrellas"
        android:layout_below="@id/descripcionPlatillo"
        android:layout_alignStart="@+id/nombrePlatillo"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
    </ImageView>

    <TextView
        android:id="@+id/disponibilidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/puntuacionPlatillo"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="DISPONIBLE"
        android:textStyle="bold"
        android:textSize="16sp">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        />

    <View
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        android:layout_below="@+id/puntuacionPlatillo"
        />

    <View
        android:layout_height="wrap_content"
        android:layout_width="2dp"
        android:background="@color/teal_700"
        android:layout_above="@+id/barraInferior"
        />

    <View
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_width="2dp"
        android:background="@color/teal_700"
        android:layout_above="@+id/barraInferior"/>

</RelativeLayout>