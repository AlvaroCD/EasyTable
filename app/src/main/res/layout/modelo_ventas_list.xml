<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/nombreCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ventas_totales_del_local_strings"
        />
    <TextView
        android:id="@+id/CantidadPagada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_empleado_strings"
        android:layout_below="@+id/numeroMesaUtilizada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/numeroMesaUtilizada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paga_la_cantidad_de"
        android:layout_below="@id/nombreCliente"
        android:layout_marginTop="10dp"/>

</RelativeLayout>